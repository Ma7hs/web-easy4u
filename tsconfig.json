{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "types/*": ["./types/*"]
    }
  },
  "include": ["next-env.d.ts",
               "**/*.ts",
                "**/*.tsx", 
                ".next/types/**/*.ts",
                "src", 
                "typings",
                 "node_modules/@types",
                 "typings/*.d.ts"
                ],
  "exclude": ["node_modules"]
}
